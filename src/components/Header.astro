---
import { SITE_TITLE } from "@src/consts";
---

<header>
	<a href="/">
		<img alt="" class="logo" src="/logo.svg" />
		<span>{SITE_TITLE}</span>
	</a>
</header>

<style>
	a {
		align-items: center;
		color: var(--color-text);
		display: inline-flex;
		font-size: var(--fs-2);
		font-weight: bold;
		gap: 1em;
		text-decoration: none;
	}

	a:visited {
		color: currentColor;
	}

	.logo {
		height: 4rem;
		width: 4rem;
	}
</style>
