---
import { Image } from 'astro:assets';
const { alt = '', format = 'webp', src, quality = 'high' } = Astro.props;
---

<figure>
	<a class="u-flex" href={src.src}>
		<Image
			alt={alt}
			format={format}
			quality={quality}
			src={src}
			width="648"
		/>
	</a>
	<figcaption><slot /></figcaption>
</figure>

<style>
	figcaption {
		border-bottom: var(--2px) solid var(--color-link);
		padding: var(--fs-1) 0;
	}
</style>
