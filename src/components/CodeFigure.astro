---
const { label } = Astro.props;
---

<figure>
	{label && <figcaption>{label}</figcaption>}
	<slot />
</figure>

<style>
	figure {
		border: var(--2px) solid var(--color-link);
		border-radius: var(--4px);
	}

	figcaption {
		background-color: var(--color-link);
		border-bottom: var(--2px) solid var(--color-link);
		color: var(--color-base);
		padding: 0.5em 1em;
	}

	:global(figure pre.astro-code) {
		margin: 0;
		padding: 1em;
	}

	:global(figure pre.astro-code:focus) {
		outline: var(--2px) solid var(--color-link);
		outline-offset: calc(var(--4px) * -1);
	}
</style>
