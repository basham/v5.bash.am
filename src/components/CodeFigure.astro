---
const { label } = Astro.props;
---

<figure>
	{label && <figcaption set:html={label}></figcaption>}
	<slot />
</figure>

<style>
	figure {
		border: var(--border);
		border-radius: var(--4px);
		padding: var(--2px);
	}

	figcaption {
		background-color: var(--color-border);
		padding: 0.5em 1em;
	}

	:global(figure pre.astro-code) {
		margin: 0;
		padding: 1em;
	}

	:global(figure:has(pre.astro-code:focus)) {
		border-color: var(--color-link);
	}

	:global(figure pre.astro-code:focus) {
		outline: none;
	}
</style>
